{
  "name": "@ez-corp/ez-ai-pipeline",
  "version": "1.3.0",
  "description": "A production-ready CLI tool that executes prompt optimization pipelines using the OpenCode SDK",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "ez-ai-pipeline": "./dist/index.js"
  },
  "files": [
    "dist",
    "dist-pipelines",
    "web-dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --hot run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --minify",
    "build:pipelines": "bun run scripts/build-pipelines.ts",
    "build:web": "bun run web/build.ts && rm -rf web-dist && cp -r web/dist web-dist",
    "build:all": "bun run build && bun run build:pipelines && bun run build:web",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "bun run build:all",
    "test": "bun test",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src",
    "web": "bun --hot run web/index.ts",
    "landing": "bun --hot run landing/server.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.73",
    "@anthropic-ai/sdk": "^0.39.0",
    "@inquirer/prompts": "^8.1.0",
    "tinyglobby": "^0.2.0",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "figures": "^6.1.0",
    "ora": "^8.1.1",
    "svelte": "^5.46.0",
    "tailwindcss": "^4.1.18",
    "yargs": "^17.7.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/bun": "latest",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^22.10.2",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "bun-plugin-svelte": "^0.0.6",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "svelte-preprocess": "^6.0.3",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "ai",
    "pipeline",
    "prompt",
    "optimization",
    "cli",
    "anthropic",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  }
}
