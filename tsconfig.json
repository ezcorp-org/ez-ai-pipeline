{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@cli/*": ["src/cli/*"],
      "@core/*": ["src/core/*"],
      "@schema/*": ["src/schema/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@typings/*": ["src/typings/*"]
    }
  },
  "include": ["src/**/*", "pipelines/**/*", "tests/**/*"]
}
